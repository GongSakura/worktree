{
    "include": [
        "src/lib/**/*",
        "src/index.ts"
, "src/lib/utils/types.ts"    ],
    "exclude": [
        "src/__test__/**/*"
    ],
    "compilerOptions": {
        "lib": [
            "ESNext",
            "ES2017"
        ],
        "module": "ESNext",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "noImplicitThis": false
    },
}